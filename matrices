def matematicas():
    continuar = True
    while continuar:
        lista1 = [1,]
        lista2 = [1,]
        lista3 = [1,]

        lista1.clear()
        lista2.clear()
        lista3.clear()

        resta = 1
        suma = 2
        multiplicacion = 3

        print("Quieres trabajar con numeros decimales")
        pregunta2 = input("si o no: ")

        print("Selecciona el tipo calculo de matrices por su numero")

        print(f"""      Metodos De Calculo De Matrices
        {resta}) Resta
        {suma}) Suma 
        {multiplicacion}) Multiplicacion
        """)

        pregunta1 = int(input("Selecciona por su numero el tipo de calculo: "))

        lol1 = int(input("Cuantas filas hay en tu primera matriz: "))
        lol2 = int(input("Cuantas columnas hay en tu primera matriz: "))
        
        if pregunta2 == "no" or pregunta2 == "NO" or pregunta2 == "No":
            if pregunta1 == suma:
                if lol1 and lol2 == 2:
                    print("Agrega los primeros numero de tu primer Matriz")
                    lol1 = int(input("Agrega el primer numero: "))
                    lol2 = int(input("Agrega el segundo numero: "))
 


                    print("Agrega los numero de tu segunda Matriz")
                    XD1 = int(input("Agrega el primer numero: "))
                    XD2 = int(input("Agrega el segundo numero: "))

                    lista1.extend([lol1])
                    lista1.extend([lol2])

                    lista2.extend([XD1])
                    lista2.extend([XD2])

                    a = lol1 + XD1
                    b = lol2 + XD2

                    lista3.extend([a])
                    lista3.extend([b])

                    print(lista1)
                    print(lista2)
    
                    print("")

                    print(lista3)

                elif lol1 and lol2 == 3:
                    print("Agrega los primeros numero de tu primer Matriz")
